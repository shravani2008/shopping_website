<!doctype html>
<html>
<head>
  <meta charset="utf-8"><title>Add Product</title>
  <style>
    body{font-family:Inter,Arial;margin:30px;background:#f6f7fb}
    form{max-width:480px;margin:0 auto;background:#fff;padding:20px;border-radius:10px;box-shadow:0 6px 18px rgba(0,0,0,0.06)}
    input,textarea{width:100%;padding:10px;margin:8px 0;border-radius:8px;border:1px solid #ddd}
    button{padding:10px 14px;border-radius:8px;background:#ff6b9a;color:#fff;border:none;cursor:pointer}
  </style>
</head>
<body>
  <form action="/add-product" method="POST" enctype="multipart/form-data">
    <h2>Add Product</h2>
    <input name="name" placeholder="Product name" required />
    <input name="price" type="number" placeholder="Price" required />
    <textarea name="description" placeholder="Description"></textarea>
    <label>Upload image (choose file) or paste an image URL below</label>
    <input type="file" name="imageFile" accept="image/*" />
    <input name="imageUrl" placeholder="Image URL (optional)" />
    <button type="submit">Save Product</button>
  </form>
</body>
</html>
